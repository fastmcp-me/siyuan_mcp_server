{
  "name": "siyuan-mcp",
  "version": "1.0.2",
  "description": "Model Context Protocol (MCP) server for SiYuan Note, providing complete SiYuan API functionality",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "siyuan-mcp": "./dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "node test-docker.js",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "test:docker": "node test-docker.js",
    "prepublishOnly": "npm run build",
    "publish:npm": "npm publish",
    "publish:docker": "docker build -t xgq18237/siyuan-mcp:latest . && docker push xgq18237/siyuan-mcp:latest",
    "publish:both": "npm run publish:npm && npm run publish:docker"
  },
  "keywords": [
    "siyuan",
    "mcp",
    "model-context-protocol",
    "note-taking",
    "api",
    "typescript",
    "cli"
  ],
  "author": "xgq18237",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xgq18237/siyuan_mcp_server.git"
  },
  "bugs": {
    "url": "https://github.com/xgq18237/siyuan_mcp_server/issues"
  },
  "homepage": "https://github.com/xgq18237/siyuan_mcp_server#readme",
  "devDependencies": {
    "@types/node": "^24.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
